<div class="container mt-5">
    <div class="row g-4">
        {{#each course}}
        <div class="col-sm-6 col-lg-4 d-flex">
            <div class="card shadow-sm w-100">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top rounded-top" alt="{{this.name}}">
                </a>
                <div class="card-body d-flex flex-column">
                    <a href="/courses/{{this.slug}}" class="text-decoration-none text-dark">
                        <h5 class="card-title fw-semibold">{{this.name}}</h5>
                    </a>
                    <p class="card-text text-muted">{{this.description}}</p>
                    <div class="mt-auto">
                        <a href="#" class="btn btn-outline-primary w-100">Mua Khoá Học</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
