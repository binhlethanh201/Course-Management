<div class="mt-4">
    <h3>ĐĂNG KHOÁ HỌC</h3>
    <form method="POST" action="/courses/store">

        <div class="form-group m-3">
            <label for="name">Tên Khoá Học</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group m-3">
            <label for="description">Mô Tả Khoá Học</label>
            <textarea type="text" class="form-control" id="description" name="description"></textarea>
        </div>
        <div class="form-group m-3">
            <label for="videoId">Video Khoá Học</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group m-3">
            <label for="level">Cấp Độ Khoá Học</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary m-3">Thêm Khoá Học</button>
    </form>
</div>